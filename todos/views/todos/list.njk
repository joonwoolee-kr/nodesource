{% extends "templates/layout.njk" %}
{% block style %}
  
{% endblock %}
{% block content %}
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <!-- content 영역 -->
    <h1>{{title}}</h1>
    <div class="container">
      <a href="/todos/complete/list" class="btn btn-secondary"
        >완료 Todo</a
      >
      <table class="table">
        <thead>
          <tr>
            <th scope="col">번호</th>
            <th scope="col">할 일</th>
            <th scope="col">중요 여부</th>
            <th scope="col">완료 여부</th>
          </tr>
        </thead>
        <tbody>
          {% for todo in todos %}
          <tr>
            <th scope="row">{{todo.id}}</th>
            <td>
              <a href="/todos/{{todo.id}}">{{todo.title}}</a>
            </td>
            <td>
              <input
                type="checkbox"
                class="form-check-input"
                id="important"
                name="important"
                {{'checked' if todo.important else ''}}
                readonly
              />
            </td>
            <td>
              <input
                type="checkbox"
                class="form-check-input"
                id="completed"
                name="completed"
                {{'checked' if todo.completed else ''}}
              />
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <form action="" method="post" id="comForm">
      <input type="hidden" name="id" value="" />
      <input type="hidden" name="completed" value="" />
    </form>
  </main>
{% endblock %}
{% block script %}
  
{% endblock %}
